<?xml version="1.0" encoding="utf-8" ?>
<hibernate-mapping xmlns="urn:nhibernate-mapping-2.2" assembly="NHibernate.Logging.CommonLogging.Demo"	namespace="NHibernate.Logging.CommonLogging.Demo">
	<class name="Customer" table="Customers">
		<id name="Id" column="Id" type="Int64">
			<generator class="native"/>
		</id>

		<property name="FirstName" not-null="true"  type="String"/>
		<property name="LastName"  not-null="true"  type="String"/>
		<property name="Comment"   not-null="false" type="String"/>
	</class>
</hibernate-mapping>
